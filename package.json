{
  "name": "@fabiospampinato/store",
  "description": "A beautifully-simple framework-agnostic modern state management library.",
  "version": "1.8.0",
  "main": "x/index.js",
  "types": "x/index.d.ts",
  "scripts": {
    "benchmark": "node tasks/benchmark.js",
    "clean:dist": "rimraf x",
    "clean:coverage": "rimraf coverage .nyc_output",
    "clean": "npm run clean:dist && npm run clean:coverage",
    "compile": "tsc --skipLibCheck && tstei",
    "compile:watch": "tsc --skipLibCheck --watch",
    "test": "ava",
    "test:watch": "ava --watch",
    "coverage": "nyc --reporter=html ava",
    "report": "nyc report",
    "report:html": "open coverage/index.html",
    "demo:build": "cd demo && webpack",
    "demo:build:watch": "cd demo && webpack --watch",
    "demo:serve": "cd demo && open index.html",
    "prepublishOnly": "npm run clean && npm run compile && npm run coverage"
  },
  "ava": {
    "compileEnhancements": false,
    "files": [
      "test/modules/**.ts",
      "test/modules/**.tsx"
    ],
    "babel": {
      "extensions": [
        "ts",
        "tsx"
      ]
    },
    "require": [
      "ts-node/register/transpile-only",
      "jsdom-global/register"
    ]
  },
  "bugs": {
    "url": "https://github.com/fabiospampinato/store/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Fabio Spampinato",
    "email": "spampinabio@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fabiospampinato/store.git"
  },
  "keywords": [
    "state",
    "store",
    "management",
    "library",
    "node",
    "react",
    "reactive",
    "fast",
    "clean",
    "proxy"
  ],
  "dependencies": {
    "@types/react": "^16.9.41",
    "are-shallow-equal": "^1.1.1",
    "is-primitive": "^3.0.1",
    "plain-object-is-empty": "^1.0.0",
    "proxy-watcher": "^3.1.0",
    "react-use-mounted": "^1.0.0"
  },
  "peerDependencies": {
    "react": ">=16.6.0"
  },
  "devDependencies": {
    "ava": "^2.4.0",
    "ava-spec": "^1.1.1",
    "awesome-typescript-loader": "^5.2.1",
    "benchloop": "^1.3.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "jsdom": "^16.2.2",
    "jsdom-global": "^3.0.2",
    "nyc": "^15.1.0",
    "promise-resolve-timeout": "^1.2.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5",
    "typescript-transform-export-interop": "^1.0.2",
    "webpack": "^4.43.0"
  }
}
